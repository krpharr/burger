<container>
    <div class="row">
        <div class="col s4">
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col s4">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="new-burger">Burger Name:</label>
                    <input type="text" id="new-burger" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col s4">
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block}}
                {{/if}}
            {{/each}}
            </ul>
        </div>       
    </div>
</container>







