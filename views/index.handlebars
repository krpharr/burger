<container>
    <div class="row" style="height: 100%">
        <div class="col s12 m4 green accent-3">
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col s12 m4 yellow accent-2">
            <img src="assets/img/burger.png" width="100%">
            <h2>Build A Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="new-burger">Burger Name:</label>
                    <input type="text" id="new-burger" name="name">
                </div>
                {{!-- <button type="submit">Add Burger</button> --}}
                 <button class="btn waves-effect waves-light green accent-3" type="submit" name="action">Add Burger
                     <i class="material-icons right">send</i>
                 </button>
        
            </form>
        </div>
        <div class="col s12 m4 green accent-3">
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block}}
                {{/if}}
            {{/each}}
            </ul>
        </div>       
    </div>
</container>








