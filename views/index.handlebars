<div class="container">
    <div class="row" style="display: flex; justify-content:space-around;">
        <div class="col s12 m4 green accent-3 main-col">
            <div class="header-img">
                <img id="spongebob" src="assets/img/spongebob.png" width="90%">
            </div>
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col s12 m4 yellow accent-2 main-col">
            <img src="assets/img/burger.png" width="100%">
            <h2>Build A Burger</h2>
            <div id="menu-ID">

            </div>
            <form class="create-form">
                <div class="form-group">
                    <label for="new-burger">Burger Name:</label>
                    <input type="text" id="new-burger" name="name">
                </div>
                {{!-- <button type="submit">Add Burger</button> --}}
                 <button class="btn waves-effect waves-light green accent-3" type="submit" name="action">Add Burger
                     <i class="material-icons right">send</i>
                 </button>
        
            </form>
        </div>
        <div class="col s12 m4 green accent-3 main-col">
            <div class="header-img">
                <img id="patrick" src="assets/img/patrick.png" width="90%">
            </div>
            
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block}}
                {{/if}}
            {{/each}}
            </ul>
        </div>       
    </div>
</div>








